{
    "name": "gughovh/aragil-project",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "gughovh/aragil": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "bootstrap/consts.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.ini') || copy('.ini.example', '.ini');\"",
            "@php bootstrap/composerPostUpdate.php"
        ],
        "post-update-cmd": [
            "@php bootstrap/composerPostUpdate.php"
        ]
    }
}
